<?xml version="1.0"?>
<odoo>
  <record id="employee_inherit" model="ir.ui.view">
    <field name="name">hr.employee.inherit</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="replace">
      <group>
        <field name="full_name" string="Full name" invisible="1" />
        <field name="last_name" required="1" />
        <field name="first_name" required="1" />
        <field name="middle_name" />
        <field name="name" string="name" required="0" invisible="1"/>
      </group>
      </xpath>

      <xpath expr="//field[@name='job_title']" position="replace">
        <group>
          <field name="label"/>
          <field name="job_id" required="1" />  
        </group>
      </xpath>

      <xpath expr="//field[@name='mobile_phone']" position="replace">
        <field name="mobile_phone" string="Personal number"/>
      </xpath>


      <xpath expr="//field[@name='department_id']" position="replace">
          <field name="department_id" required="1" />
      </xpath>

      <xpath expr="//field[@name='work_email']" position="replace">
        <field name="work_email"/>
        <field name="personnel_type"/>
        <field name="employee_type"/>
        <field name="company_id" required="1" />
      </xpath>
      <xpath expr="//field[@name='coach_id']" position="after">
        <field name="foreign_specialist"/>
      </xpath>
      <xpath expr="//page[@name='hr_settings']" position="attributes">
        <attribute name="invisible">1</attribute>
      </xpath>
    </field>
  </record>
</odoo>