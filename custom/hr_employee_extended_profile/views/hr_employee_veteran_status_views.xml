<?xml version="1.0"?>
<odoo>
    <record id="hr_employee_veteran_status_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.veteran.status.view.tree</field>
        <field name="model">hr.employee.veteran.status</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_employee_veteran_status_view_form" model="ir.ui.view">
        <field name="name">hr.employee.veteran.status.view.form</field>
        <field name="model">hr.employee.veteran.status</field>
        <field name="arch" type="xml">
            <form string="Veteran status">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="hr_employee_veteran_status_action" model="ir.actions.act_window">
        <field name="name">Veteran status</field>
        <field name="res_model">hr.employee.veteran.status</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>