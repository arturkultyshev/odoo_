<?xml version="1.0"?>
<odoo>
  <record id="employee_inherit_wages" model="ir.ui.view">
    <field name="name">hr.employee.inherit.wages</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//page[@name='hr_settings']" position="after">
        <page name="wages" string="Financal Information" groups="hr.group_hr_user">
          <group>
            <group string="Salary">
                <field name="accrual" invisible="1"/>
                <field name="monthly_salary"/>
                <field name="hourly_salary"/>
                <field name="payroll_fund" invisible="1"/>
                <field name="tax"/>
                <field name="surcharge"/>
                <field name="tariff_category" readonly="True"/>
                <field name="bank" attrs="{'invisible': [('personnel_type', '=', 'outstaffing')]}"/>
                <field name="card_number" attrs="{'invisible': [('personnel_type', '=', 'outstaffing')]}" />
                <field name="payment_type" readonly="True" attrs="{'invisible': [('personnel_type', '=', 'outstaffing')]}"/>
                <field name="card_account_validity_start_date" attrs="{'invisible': [('personnel_type', '=', 'outstaffing')]}"/>
                <field name="mandatory_pension_contribution"/>
                <field name="mandatory_social_insurance_contribution"/>
                <field name="minimal_wage_deduction"/>
                <field name="disabled_and_veteran_deduction"/>
                <field name="disabled_and_adoptive_child_parent_deduction"/>
                <field name="voluntary_pension_contribution"/>
                <field name="medical_expenses"/>
                <field name="mortgage_reward_expenses"/>
                <field name="insurance_premium"/>
            </group>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>